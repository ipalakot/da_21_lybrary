{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
   <br><br>

   

<div class="container">
     <!-- Article main content -->
	<article class="col-md-12 maincontent">
        <div class="container">
			<div class="row">	

    <h1>Tous les Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                 <th>Image</th>
                <th>Title</th>  
                <th>Date Création</th>                  
                <th>Auteurs</th>
                <th>Categorie</th>
                <th>Resumé</th>            

            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                  <td> <img src="{{vich_uploader_asset(article, 'imageFile') | imagine_filter('rectangle') }}" class="img-fluid img-thumbnail" alt=""   ></td>
                <td align="left">
                    <a href="{{ path('articles_show', {'slug': article.slug}) }}">
                        {{ article.title }}
                    </a>
                </td>
                <td>
                    {{ article.date ? article.date|date('Y-m-d') : '' }}</td>
                <th>{{ article.auteurs.noms}}</th>
                <td>{{ article.category.titre}}</td>
                <td>{{ article.resume | raw }}</td>


            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun article pour lemoment !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('articles_new') }}">Creation </a>
			</div> 
		</div>
    </article></div>

</div>

{% endblock %}
