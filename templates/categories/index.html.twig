{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
<br><br>
    <h1>Toutes les categories </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Resume</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.titre }}</td>
                <td>{{ category.resume }}</td>
                <td>
                    <a href="{{ path('categories_show', {'id': category.id}) }}">afficher|</a>
                    <a href="{{ path('categories_edit', {'id': category.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de categories !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}"> Nouvelle Categorie </a>
{% endblock %}
